@model PasswordValidationResults

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Password Validator</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Password.Characters">Enter Password Here</label>
            <input asp-for="@Model.Password.Characters" class="form-control" />
            <span asp-validation-for="@Model.Password.Characters" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning" style="width:175px">Validate</button>
    </div>

    <div class="border p-3 mt-4">
        <div class="col-10 pb-2">
            <h2 class="text-primary">Validation Results</h2>
            <hr />
        </div>
        <div class="col-2 mb-3">
            <label asp-for="@Model.PasswordValidation.Length">Length Validation</label>
            <input asp-for="@Model.PasswordValidation.Length" class="form-control" />
            <span asp-validation-for="@Model.PasswordValidation.Length" class="text-danger"></span>
        </div>
    </div>
</form>